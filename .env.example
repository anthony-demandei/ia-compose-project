# =============================================================================
# Intelligent Intake System - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your values
# DO NOT commit .env file to version control!

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# AI Provider Selection: "openai" or "gemini"
AI_PROVIDER=gemini

# Google Gemini Configuration (Recommended - More cost-effective and faster)
GEMINI_API_KEY=AIzaSyBzEr9w7CZ4nwp4p-Szqfqc1YgOCqm8nos
# Gemini Model Options: gemini-2.0-flash-exp, gemini-1.5-pro, gemini-1.5-flash
GEMINI_MODEL=gemini-2.0-flash-exp

# OpenAI Configuration (Alternative - Keep for backward compatibility)
OPENAI_API_KEY=sk-your-openai-api-key-here
# OpenAI Model Options: gpt-4, gpt-4o, gpt-4o-mini, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o-mini

# Embedding Model for semantic search
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-small

# Classification Model for question categorization
CLASSIFICATION_MODEL=gpt-4o-mini

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Local Storage (for development)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./storage
LOCAL_DOCUMENTS_PATH=./storage/documents
LOCAL_SESSIONS_PATH=./storage/sessions

# Cloud Storage (optional - for production)
# GCS_BUCKET_NAME=your-bucket-name
# GCS_CREDENTIALS_PATH=./gcp-credentials.json
# FIRESTORE_PROJECT_ID=your-project-id

# =============================================================================
# INTELLIGENT INTAKE CONFIGURATION
# =============================================================================

# Question Selection
MAX_QUESTIONS_PER_SELECTION=15
SIMILARITY_THRESHOLD=0.7
ENABLE_CONTEXT_INFERENCE=true
ENABLE_SMART_FILTERING=true

# Multi-Agent System
ENABLE_MULTI_AGENT=false
AGENT_COORDINATION_MODE=collaborative
CONSENSUS_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.6

# Session Management
MAX_SESSION_DURATION=3600  # 1 hour in seconds

# =============================================================================
# API CONFIGURATION
# =============================================================================

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8000"]

# Server Configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Demandei Platform API Key (REQUIRED)
DEMANDEI_API_KEY=your_fixed_api_key_for_demandei_platform

# JWT Configuration (for legacy endpoints)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug Mode (verbose logging)
DEBUG=false

# Development Mode (auto-reload, etc.)
DEVELOPMENT_MODE=true

# =============================================================================
# OPTIONAL SERVICES
# =============================================================================

# PostgreSQL (if using database instead of file storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/intake_db
# DB_POOL_SIZE=10
# DB_MAX_OVERFLOW=20

# Monitoring (optional)
# ENABLE_METRICS=false
# PROMETHEUS_PORT=9090
# GRAFANA_PORT=3000

# Webhooks (optional)
# WEBHOOK_ENABLED=false
# WEBHOOK_URL=https://your-webhook-endpoint.com
# WEBHOOK_SECRET=your-webhook-secret